# Set GTK theme
exec --no-startup-id gsettings set org.gnome.desktop.interface gtk-theme 'Yaru-purple-dark'
exec --no-startup-id bash -c 'sleep 1 && nautilus --quit && GTK_THEME=Yaru-purple-dark nautilus &'

# Set icon theme
